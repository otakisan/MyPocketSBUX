<h1>Listing product_ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Order detail</th>
      <th>Is custom</th>
      <th>Name</th>
      <th>Milk type</th>
      <th>Unit calorie</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th>Enabled</th>
      <th>Quantity type</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_ingredients.each do |product_ingredient| %>
      <tr>
        <td><%= product_ingredient.order_detail %></td>
        <td><%= product_ingredient.is_custom %></td>
        <td><%= product_ingredient.name %></td>
        <td><%= product_ingredient.milk_type %></td>
        <td><%= product_ingredient.unit_calorie %></td>
        <td><%= product_ingredient.unit_price %></td>
        <td><%= product_ingredient.quantity %></td>
        <td><%= product_ingredient.enabled %></td>
        <td><%= product_ingredient.quantity_type %></td>
        <td><%= product_ingredient.remarks %></td>
        <td><%= link_to 'Show', product_ingredient %></td>
        <td><%= link_to 'Edit', edit_product_ingredient_path(product_ingredient) %></td>
        <td><%= link_to 'Destroy', product_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

