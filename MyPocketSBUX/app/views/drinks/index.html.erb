<h1>Listing drinks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Jan code</th>
      <th>Price</th>
      <th>Special</th>
      <th>Notes</th>
      <th>Notification</th>
      <th>Size</th>
      <th>Milk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.name %></td>
        <td><%= drink.category %></td>
        <td><%= drink.jan_code %></td>
        <td><%= drink.price %></td>
        <td><%= drink.special %></td>
        <td><%= drink.notes %></td>
        <td><%= drink.notification %></td>
        <td><%= drink.size %></td>
        <td><%= drink.milk %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drink', new_drink_path %>
