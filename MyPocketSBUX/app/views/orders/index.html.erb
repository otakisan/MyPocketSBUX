<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Tax excluded total price</th>
      <th>Tax included total price</th>
      <th>Remarks</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.store %></td>
        <td><%= order.tax_excluded_total_price %></td>
        <td><%= order.tax_included_total_price %></td>
        <td><%= order.remarks %></td>
        <td><%= order.notes %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

